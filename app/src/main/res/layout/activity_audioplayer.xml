<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AudioplayerActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/arrow_back"
            app:tint="@color/medium_black_white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/placeholder"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            android:layout_marginTop="46dp"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            tools:src="@drawable/music_note"/>

    <TextView
            android:id="@+id/trackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/placeholder"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            android:layout_marginTop="24dp"
            tools:text="Yesterday (Remastered 2009)"
            style="@style/PrimaryTextView.MediumBlackWhite"
            android:textFontWeight="400"/>

    <TextView
            android:id="@+id/artistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/trackName"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            android:layout_marginTop="12dp"
            tools:text="The Beatles "
            style="@style/SecondaryTextView.MediumBlackWhite"/>

    <ImageButton
            android:id="@+id/addPlaylistBtn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/add_track_in_playlist"
            android:background="@drawable/oval"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTime"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/pauseButton"/>

    <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:src="@drawable/play"
            android:background="@drawable/oval"
            app:layout_constraintStart_toEndOf="@id/addPlaylistBtn"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTime"
            app:layout_constraintEnd_toStartOf="@id/favoriteButton"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/oval"
            android:src="@drawable/like"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTime"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/pauseButton"/>

    <TextView
            android:id="@+id/trackTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintBottom_toTopOf="@+id/collectionName"
            app:layout_constraintTop_toBottomOf="@+id/pauseButton"
            tools:text="Длительность"/>
    <TextView
            android:id="@+id/collectionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/trackTime"
            app:layout_constraintBottom_toTopOf="@+id/releaseDate"
            tools:text="Альбом"/>

    <TextView
            android:id="@+id/releaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/collectionName"
            app:layout_constraintBottom_toTopOf="@+id/primaryGenreName"
            tools:text="Год"/>

    <TextView
            android:id="@+id/primaryGenreName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/releaseDate"
            app:layout_constraintBottom_toTopOf="@+id/country"
            tools:text="Жанр"/>

    <TextView
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/primaryGenreName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            tools:text="Страна"/>
</androidx.constraintlayout.widget.ConstraintLayout>