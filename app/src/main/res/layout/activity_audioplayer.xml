<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AudioplayerActivity">

    <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/arrow_back"
            app:tint="@color/medium_black_white"
            android:layout_marginStart="20dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/placeholderPlayer"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintBottom_toTopOf="@id/trackName"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            tools:src="@drawable/music_note"/>

    <TextView
            android:id="@+id/trackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/placeholderPlayer"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            android:layout_marginTop="24dp"
            tools:text="Yesterday (Remastered 2009)"
            style="@style/PrimaryTextView.MediumBlackWhite"
            android:textFontWeight="400"/>

    <TextView
            android:id="@+id/artistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/trackName"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            android:layout_marginTop="12dp"
            tools:text="The Beatles"
            style="@style/SecondaryTextView.MediumBlackWhite"/>

    <ImageButton
            android:id="@+id/addPlaylistBtn"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/add_track_in_playlist"
            android:background="@drawable/oval"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTimeTxt"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toStartOf="@id/pauseButton"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:src="@drawable/play"
            android:background="@drawable/oval"
            android:backgroundTint="@color/white_medium_black"
            app:layout_constraintStart_toEndOf="@id/addPlaylistBtn"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTimeTxt"
            app:layout_constraintEnd_toStartOf="@id/favoriteButton"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/pauseButton"
            android:layout_marginTop="4dp"
            android:text="0:30"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:textColor="@color/medium_black_white"/>

    <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/oval"
            android:src="@drawable/like"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintBottom_toTopOf="@id/trackTimeTxt"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/pauseButton"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    <TextView
            android:id="@+id/trackTimeTxt"
            style="@style/SecondaryTextAudioplayer"
            android:text="Длительность"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trackTime"
            app:layout_constraintBottom_toTopOf="@+id/collectionNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/pauseButton"
            app:layout_constraintHorizontal_weight="3"
            tools:text="Длительность"/>
    
    <TextView
            android:id="@+id/trackTime"
            style="@style/SecondaryTextAudioplayer.Value"
            app:layout_constraintBaseline_toBaselineOf="@id/trackTimeTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/collectionNameTxt"
            app:layout_constraintStart_toEndOf="@+id/trackTimeTxt"
            tools:text="5:35"/>

    <TextView
            android:id="@+id/collectionNameTxt"
            style="@style/SecondaryTextAudioplayer"
            android:text="Альбом"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trackTimeTxt"
            app:layout_constraintBottom_toTopOf="@+id/releaseDateTxt"
            tools:text="Альбом"/>

    <TextView
            android:id="@+id/collectionName"
            style="@style/SecondaryTextAudioplayer.Value"
            app:layout_constraintBaseline_toBaselineOf="@id/collectionNameTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/releaseDateTxt"
            app:layout_constraintStart_toEndOf="@+id/collectionNameTxt"
            tools:text="Yesterday (Remastered 2009)"/>

    <TextView
            android:id="@+id/releaseDateTxt"
            style="@style/SecondaryTextAudioplayer"
            android:text="Год"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collectionNameTxt"
            app:layout_constraintBottom_toTopOf="@+id/primaryGenreNameTxt"
            tools:text="Год"/>

    <TextView
            android:id="@+id/releaseDate"
            style="@style/SecondaryTextAudioplayer.Value"
            app:layout_constraintBaseline_toBaselineOf="@id/releaseDateTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/primaryGenreNameTxt"
            app:layout_constraintStart_toEndOf="@+id/releaseDateTxt"
            tools:text="1965"/>

    <TextView
            android:id="@+id/primaryGenreNameTxt"
            style="@style/SecondaryTextAudioplayer"
            android:text="Жанр"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/releaseDateTxt"
            app:layout_constraintBottom_toTopOf="@+id/countryTxt"
            tools:text="Жанр"/>

    <TextView
            android:id="@+id/primaryGenreName"
            style="@style/SecondaryTextAudioplayer.Value"
            app:layout_constraintBaseline_toBaselineOf="@id/primaryGenreNameTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/countryTxt"
            app:layout_constraintStart_toEndOf="@+id/primaryGenreNameTxt"
            tools:text="Rock"/>

    <TextView
            android:id="@+id/countryTxt"
            style="@style/SecondaryTextAudioplayer"
            android:text="Страна"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/primaryGenreNameTxt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            tools:text="Страна"/>

    <TextView
            android:id="@+id/country"
            style="@style/SecondaryTextAudioplayer.Value"
            app:layout_constraintBaseline_toBaselineOf="@id/countryTxt"
            app:layout_constraintTop_toBottomOf="@+id/primaryGenreNameTxt"
            app:layout_constraintStart_toEndOf="@+id/countryTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            tools:text="Великобритания"/>
</androidx.constraintlayout.widget.ConstraintLayout>