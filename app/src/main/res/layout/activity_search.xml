<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:style="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".SearchActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_activity_padding">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_main_activity"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/settings_activity_padding"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/main_activity_button_search"
                android:textColor="@color/settings_text_color"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="28dp"/>

    </LinearLayout>

    <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="16dp"
                  android:orientation="horizontal"
                  tools:context=".MainActivity">

        <EditText
                style="@style/EditTextMaket"
                android:id="@+id/inputEditText"
                android:drawableStart="@drawable/search"
                android:paddingStart="13dp"
                android:drawablePadding="11dp"
                android:drawableTint="@color/edit_text_insert_txt"
                android:hint="@string/main_activity_button_search"
                android:maxLines="1"
                android:saveEnabled="false"/>

        <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_clear"
                android:visibility="gone"
                android:layout_margin="11dp"
                style:tint="@color/edit_text_insert_txt"/>
    </FrameLayout>

</LinearLayout>