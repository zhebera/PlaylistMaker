<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_activity_padding">

        <ImageView
                style="@style/HeadingActivityArrowBackImage"
                android:id="@+id/btn_main_activity"
            />

        <TextView
                style="@style/HeadingActivityTextView"
                android:text="@string/main_activity_button_search"
            />

    </LinearLayout>

    <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="16dp"
                  android:orientation="horizontal"
                  tools:context=".MainActivity">

        <EditText
                style="@style/EditTextMaket"
                android:id="@+id/inputEditText"
                android:inputType="text"
                android:drawableStart="@drawable/search"
                android:paddingStart="13dp"
                android:drawablePadding="11dp"
                android:drawableTint="@color/edit_text_insert_txt"
                android:hint="@string/main_activity_button_search"
                android:maxLines="1"
                android:saveEnabled="false"/>

        <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear"
                android:visibility="visible"
                android:layout_margin="11dp"
                style:tint="@color/edit_text_insert_txt"/>
    </FrameLayout>

</LinearLayout>