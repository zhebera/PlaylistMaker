<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_activity_background"
        android:orientation="vertical">
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/primary_text_size"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="@dimen/left_padding_standart"
            android:layout_marginTop="14dp"/>

    <Button
            android:id="@+id/btn_search"
            style="@style/MainActivityButtons"
            android:text="@string/main_activity_button_search"
            app:icon="@drawable/search"/>

    <Button
            android:id="@+id/btn_library"
            style="@style/MainActivityButtons"
            android:layout_marginVertical="@dimen/left_padding_standart"
            android:text="@string/main_activity_button_library"
            app:icon="@drawable/library"/>

    <Button
            android:id="@+id/btn_settings"
            style="@style/MainActivityButtons"
            android:layout_marginBottom="28dp"
            android:text="@string/main_activity_button_settings"
            app:icon="@drawable/settings"/>

</LinearLayout>