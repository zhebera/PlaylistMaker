<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settings_activity_background"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/settings_activity_padding">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_main_activity"
                        android:src="@drawable/arrow_back"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/settings_activity_padding"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/main_activity_button_settings"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/ys_display_medium"
                        android:textSize="@dimen/primary_text_size"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="28dp"/>

        </LinearLayout>

        <FrameLayout
                style="@style/SettingsActivityFrameLayout"
                android:layout_marginTop="40dp">

                <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_activity_theme_switch"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/ys_display_regular"
                        android:textAllCaps="false"
                        android:layout_marginVertical="@dimen/settings_activity_txt_frame_padding"
                        android:layout_marginStart="@dimen/medium_padding"
                        android:textSize="@dimen/secondary_text_size"
                />
        </FrameLayout>

        <FrameLayout
                style="@style/SettingsActivityFrameLayout"
                android:id="@+id/btn_share_application">

                <TextView
                        style="@style/SettingsActivityTextView"
                        android:text="@string/settings_activity_share_txt"/>

                <ImageView
                        style="@style/SettingsActivityImageView"
                        android:src="@drawable/share"/>

        </FrameLayout>

        <FrameLayout
                style="@style/SettingsActivityFrameLayout"
                android:id="@+id/btn_support_connect">


                <TextView
                        style="@style/SettingsActivityTextView"
                        android:text="@string/settings_activity_support_txt"/>

                <ImageView
                        style="@style/SettingsActivityImageView"
                        android:src="@drawable/support"/>
        </FrameLayout>

        <FrameLayout
                style="@style/SettingsActivityFrameLayout"
                android:id="@+id/btn_user_agreement">

                <TextView
                        style="@style/SettingsActivityTextView"
                        android:text="@string/settings_activity_agreement_txt"/>

                <ImageView
                        style="@style/SettingsActivityImageView"
                        android:src="@drawable/arrow_forward"
                        android:layout_marginEnd="23dp"/>
        </FrameLayout>

</LinearLayout>