<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginHorizontal">@dimen/left_padding_standart</item>
        <item name="android:textColor">@color/medium_black_medium_black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontWeight">500</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/main_activity_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_activity_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="FrameLayoutMaket">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for secondary text -->
    <style name="SecondaryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SecondaryTextView.BlackWhite">
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="SecondaryTextView.GreyBlack">
        <item name="android:textColor">@color/grey_black</item>
    </style>
    <style name="SecondaryTextView.GreyWhite">
        <item name="android:textColor">@color/grey_white</item>
    </style>
    <style name="SecondaryTextView.MediumBlackMediumBlack">
        <item name="android:textColor">@color/medium_black_medium_black</item>
    </style>
    <style name="SecondaryTextView.MediumBlackWhite">
        <item name="android:textColor">@color/medium_black_white</item>
    </style>
    <style name="SecondaryTextView.GreyMediumBlack">
        <item name="android:textColor">@color/grey_medium_black</item>
    </style>
    <style name="SecondaryTextView.BlackWhite.SettingsActivityText">
        <item name="android:layout_marginVertical">@dimen/settings_activity_vertical_padding</item>
        <item name="android:layout_marginStart">@dimen/left_padding_standart</item>
        <item name="android:layout_marginEnd">@dimen/settings_activity_txt_margin_end</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="SecondaryTextView.GreyWhite.Track">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="SecondaryTextView.MediumBlackMediumBlack.EditText">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/edit_text_example</item>
        <item name="android:drawableTint">@color/grey_medium_black</item>
        <item name="android:textColorHint">@color/grey_medium_black</item>
    </style>
    <style name="SecondaryTextView.BlackWhite.TabLayoutTxt">
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

<!--    Style for secondary text in audioplayer activity-->

    <style name="SecondaryTextAudioplayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constraintHorizontal_weight">3</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="SecondaryTextAudioplayer.Value">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/medium_black_white</item>
        <item name="layout_constraintHorizontal_weight">5</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for primary text -->
    <style name="PrimaryTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="PrimaryTextView.BlackWhite">
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="PrimaryTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PrimaryTextView.MediumBlackMediumBlack">
        <item name="android:textColor">@color/medium_black_medium_black</item>
    </style>
    <style name="PrimaryTextView.MediumBlackWhite">
        <item name="android:textColor">@color/medium_black_white</item>
    </style>

    <style name="PrimaryTextView.MediumBlackWhite.Head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">28dp</item>
    </style>

    <!-- Style for primary images with primary text -->
    <style name="PrimaryImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="PrimaryImage.HeadArrowBack">
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/primary_left_padding</item>
        <item name="tint">@color/medium_black_white</item>
    </style>

    <!-- Style for secondary images with secondary text -->
    <style name="SecondaryImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SecondaryImage.GreyMediumBlack">
        <item name="tint">@color/medium_black_white</item>
    </style>
    <style name="SecondaryImage.GreyWhite">
        <item name="tint">@color/grey_white</item>
    </style>
    <style name="SecondaryImage.GreyWhite.EndImage">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginVertical">@dimen/settings_activity_img_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/settings_activity_vertical_padding</item>
    </style>
    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColorHint">@color/medium_black_white</item>
        <item name="boxStrokeColor">@drawable/edit_text_playlist_selector</item>
        <item name="hintTextColor">@drawable/edit_text_playlist_selector</item>
    </style>
</resources>